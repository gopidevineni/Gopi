pipeline {
    agent any 
    triggers{
           cron ('31 12 * * * ')
    }

        stages {
            stage('Checkout') {
                steps { 
                    git branch: 'main', credentialsId: '41afc68b-d610-4074-b56a-d87e5165530e', url: 'https://github.com/gopidevineni/Gopi.git'
                    
        }
    }
            
        stage('Build') {
            steps {
                sh 'mvn clean package'
            
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
